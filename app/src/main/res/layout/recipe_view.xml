<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_gravity="left">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:background="@drawable/no_image"/>

    <ImageView
        android:id="@+id/checked_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:visibility="gone"
        android:background="@drawable/checked_image"/>

    <ImageView
        android:id="@+id/not_checked_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="3dp"
        android:visibility="gone"
        android:background="@drawable/not_checked_image"/>

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/image_view"
        android:layout_toEndOf="@id/image_view"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/title_view"
        android:layout_alignStart="@id/title_view"
        android:layout_alignEnd="@id/title_view"
        android:layout_alignRight="@id/title_view"
        android:layout_below="@id/title_view"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recipe_grade_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_grade"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"/>
        
        <ImageView
            android:id="@+id/grade_star_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/grade_star_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/grade_star_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/grade_star_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/grade_star_5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/recipe_difficulty_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_difficulty"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"/>

        <ImageView
            android:id="@+id/difficulty_star_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/difficulty_star_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/difficulty_star_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/difficulty_star_4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <ImageView
            android:id="@+id/difficulty_star_5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/star_empty"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/title_view"
        android:layout_alignStart="@id/title_view"
        android:layout_alignEnd="@id/title_view"
        android:layout_alignRight="@id/title_view"
        android:layout_below="@id/first_line"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recipe_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_time"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"/>

        <TextView
            android:id="@+id/recipe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/recipe_people_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_people"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/recipe_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/people_shopping_line"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/title_view"
        android:layout_alignStart="@id/title_view"
        android:layout_alignEnd="@id/title_view"
        android:layout_alignRight="@id/title_view"
        android:layout_below="@id/title_view"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/people_edit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_people"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"/>

        <EditText
            android:id="@+id/people_edit"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>