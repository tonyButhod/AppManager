<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="buthod.tony.appManager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="buthod.tony.appManager.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="buthod.tony.appManager.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="buthod.tony.appManager.PedometerActivity"
            android:label="@string/pedometer_section_label"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="buthod.tony.appManager.account.AccountActivity"
            android:label="@string/account_section_label"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="buthod.tony.appManager.account.AccountHistoryActivity"
            android:label="@string/account_history_section_label"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="buthod.tony.appManager.account.AccountStatementActivity"
            android:label="@string/account_statement_section_label"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
